{
  "compilerOptions": {
    "target": "ES5",
    "baseUrl": ".",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "module": "esnext",
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
